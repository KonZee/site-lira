// Font-size
h1
h2
h3
h4
h5
	font-weight normal
	margin 0.75em 0 0.25em
	padding 0

h1
	font-size 250%
	letter-spacing -0.04em
	&.title
		font 350%/100% times,Times New Roman,times-roman,georgia,serif
		letter-spacing -1px
		text-shadow 1px 1px 1px #fff
		margin 0.25em 0 0.5em

h2
	font-size 200%
	letter-spacing -0.03em

h3
	font-size 160%
	letter-spacing -0.02em
	&.title
		color #333
		font-size 150%
		font-family Calibri,"Myriad Pro",Myriad,"Trebuchet MS",Helvetica,Arial,sans-serif
		border-bottom 1px solid #999
		padding 5px 0 2px
		letter-spacing normal
		margin-bottom 4px
a
	color #356aa0
	text-decoration none
	&:hover
	&:focus
		color #ed1e24
		text-decoration underline

p
	line-height 150%
	margin 0.25em 0 0.75em

// Lists
ul
	padding 0
	line-height 150%
	list-style-position outside
	list-style-type disc
	margin  0 0 10px 15px

// Blockquote
blockquote
	background #f9f9f9
	border-left 10px solid #ccc
	padding 0.5em 10px
	margin 1.5em 10px
	quotes "“" "”" "‘" "’"
	position relative
	&:before
		content open-quote
		font-size 4em
		line-height 0.1em
		margin-right 0.25em
		vertical-align -0.4em
		color #ccc
	p
		display inline




// Align
.text-center
	text-align center