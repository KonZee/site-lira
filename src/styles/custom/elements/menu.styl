.menu
	width 100%
	display block
	margin 3em 5px 0
	&__item
		display inline-block
		line-height normal
		a
			display block
			padding 10px 15px
			background #ccc
			font-size 115%
			color #666
			text-shadow 0 1px 1px #fff
			text-decoration none
		&.active
		&:hover
			a
				background #fff
				color #999
				text-shadow none