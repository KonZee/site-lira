.sidebar
	min-height 1px
	width 100%
	padding 13px 10px 0
	@media screen and (min-width: 1000px)
		width 320px
		float right
		&:before
		&:after
			content ""
			display table
		&:after
			clear both

	&__tags
		margin-bottom 2em
		li
			list-style none
	&__latest
		margin-bottom 2em
		li
			list-style none
			padding 5px 0
			&:not(:first-child)
				border-top 1px dotted #aaa
	&__link
		line-height 150%
		margin-bottom 2em
		display block
	&__imagebutton
		img
			width 200px
			display block