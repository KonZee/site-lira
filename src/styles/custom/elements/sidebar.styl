.sidebar
	min-height 1px
	width 100%
	padding 13px 10px 0
	@media screen and (min-width: 100px)
		width 320px
		float right
		&:before
		&:after
			content ""
			display table
		&:after
			clear both

	&__info
		font-size 150%
		color #333
		border-bottom 1px solid #999
		letter-spacing normal
		margin-bottom 4px
		padding 5px 0 2px
	&__link
		line-height 150%