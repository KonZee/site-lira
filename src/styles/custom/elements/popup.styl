.popup
	display none
	position fixed
	left 0
	right 0
	top 0
	bottom 0
	z-index 1000
	&__shade
		width 100%
		height 100%
		background rgba(0,0,0,0.5)
		cursor pointer
	&__content
		position absolute
		left 50%
		top 50%
		transform translate(-50%,-50%)
		.close
			position absolute
			content ""
			width 40px
			height 40px
			border 2px solid #fff
			background rgba(0,0,0,0.4)
			border-radius 50%
			right -40px
			top -40px
			cursor pointer
			&:before
			&:after
				display block
				content ""
				width 26px
				height 3px
				background #fff
				position absolute
				border-radius 1px
				left 5px
				top 16px
			&:before
				transform rotate(45deg)
			&:after
				transform rotate(-45deg)
