*
	box-sizing border-box
	&:before
	&:after
		box-sizing inherit

// Sticky flex footer
html
body
	display flex
	flex-direction column
	min-height 100%

body
	flex 1 1 auto
	position relative

.header
.footer
	flex 0 0 auto
.content
	flex 1 0 auto


// Container
.container
	display table
	width 100%
	max-width 960px
	margin-left auto
	margin-right auto

// Inputs
input
select
textarea
	margin-bottom 5px
	font-family "Lucida Grande", "Lucida Sans Unicode", verdana, arial, Tahoma, Verdana, sans-serif

// line
hr
	margin 20px 0 2em
	border-top 1px dotted #e8e8e8
	color transparent