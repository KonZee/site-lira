.form
	display block
	padding 10px 0
	margin 10px 0 4em
	font-size 14px
	font-family Helvetica, Arial, sans-serif
	&__requred
		font-size 11px
		text-align right
		span
			color #c60
			font-size 200%

	label
		display block
		padding-bottom 3%
		margin-top 5px
		position relative
		&:after
			display block
			content "*"
			color #c60
			font-size 200%
			position absolute
			right 12px
			bottom 8px
	input[type="text"]
		width 100%
		padding 8px 30px 8px 2%
		border 1px solid #999
		font-size 1em
		margin-top 3px
		line-height 18px

	&__subscribe
		background #aaa
		color #fff
		border none
		border-radius 4px
		margin-bottom 5px
		padding 0 22px
		font-size 16px
		font-weight bold
		line-height 32px
		height 32px